FROM centos:6

RUN yum -y update \
    && rpm -ivh http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm \
    && yum install -y python-pip gcc libffi-devel python-devel openssl-devel git curl tar unzip \
    && pip install --upgrade pip

WORKDIR /tmp

ENV PATH /tmp/ansible/bin:/bin:/usr/bin:/sbin:/usr/sbin
ENV PYTHONPATH /tmp/ansible/lib
ENV ANSIBLE_LIBRARY /tmp/ansible/library

COPY ./test-playbook.sh test-playbook.sh

RUN chmod +x test-playbook.sh

RUN ./test-playbook.sh