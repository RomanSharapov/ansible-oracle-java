FROM ubuntu:trusty

RUN apt-get update -qq \
    && apt-get install -y python-setuptools python-dev gcc libffi-dev libssl-dev python-dev git curl tar unzip \
    && easy_install pip \
    && pip install --upgrade pip

WORKDIR /tmp

ENV PATH /tmp/ansible/bin:/bin:/usr/bin:/sbin:/usr/sbin
ENV PYTHONPATH /tmp/ansible/lib
ENV ANSIBLE_LIBRARY /tmp/ansible/library

COPY ./test-playbook.sh test-playbook.sh

RUN chmod +x test-playbook.sh

RUN ./test-playbook.sh